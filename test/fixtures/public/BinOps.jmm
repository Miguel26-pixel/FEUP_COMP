import Nando;

class BinOps {
    boolean countAllNights;
    int[] helloHistory;

    public int getHelloComputation(int cof, int[] arr) {
        countAllNights = true;
        helloHistory = Nando.getHelloHistory(countAllNights);
        Nando.getMad();
        helloHistory[0] = 0;
        int helloComputation;
        helloComputation = helloHistory[0] + 2 * helloHistory.length - 2 + arr[1] * cof;
        return new Nando().sayHello(helloComputation);
    }
}

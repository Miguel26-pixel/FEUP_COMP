import Nando;

class BinOps {
    boolean countAllNights;
    int[] helloHistory;

    public int getHelloComputation(int cof, int[] arr) {
        countAllNights = true;
        helloHistory = Nando.getHelloHistory(countAllNights);
        Nando.getMad();
        helloHistory[0] = 0;
        int helloTrials;
        helloTrials = helloHistory[0] + 2 * helloHistory.length - 2 + arr[1] * cof;
        int nights;
        nights = Nando.getHome().getBedroom().getNightCounter();
        return new Nando().sayHello(helloTrials + nights);
    }
}

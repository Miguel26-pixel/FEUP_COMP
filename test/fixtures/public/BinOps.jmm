import Nando;

class BinOps {
    boolean countAllNights;
    int[] helloHistory;

    public int getHelloComputation() {
        countAllNights = true;
        helloHistory = Nando.getHelloHistory(countAllNights);
        helloHistory[0] = 0;
        int helloSize;
        int firstHello;
        firstHello = helloHistory[0];
        helloSize = helloHistory.length;
        int helloComputation;
        helloComputation = firstHello + 2 * helloSize;
        return helloComputation;
    }
}
